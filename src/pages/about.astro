---
import BaseLayout from "../layouts/BaseLayout.astro";

const pageTitle = "About Me";

const identity = {
  firstName: "Michael",
  country: "US",
  occupation: "Software Developer",
  hobbies: ["hiking", "whittling", "philosophy", "theology"]
};

const skills = ["HTML", "CSS", "JavaScript", "ruby", "rails", "elixir", "phoenix", "liveView", "astro"];

const happy = true;
const finished = false;
const goal = 3;

const skillColor = "#10ccff";
const fontWeight = "bold";
const textCase = "capitalize";
---

<BaseLayout pageTitle={pageTitle}>
  <style is:global define:vars={{skillColor, fontWeight, textCase}}>
    h1 {
      color: purple;
      font-size: 4rem;
    }
    .skill {
      color: var(--skillColor);
      font-weight: var(--fontWeight);
      text-transform: var(--textCase);
    }
  </style>
  <p>
    I am working through Astro's indroductory tutorial. This is the second page on the site. Ain't it spiffy?
  </p>

  <p>
    This site will update as I complete more of the tut, so keep checking back!
  </p>

  <p>Here are a few facts about me:</p>

  <ul>
    <li>My name is {identity.firstName}.</li>
    <li>I live in {identity.country} and I work as a {identity.occupation}.</li>
    {identity.hobbies.length >= 2 &&
      <li>Two of my hobbies are: {identity.hobbies[0]} and {identity.hobbies[1]}</li>
    }
  </ul>

  <p>My skills are:</p>
  <ul>
    {skills.map(skill => <li class="skill">{skill}</li>)}
  </ul>

  {happy && <p>I am happy to be learning Astro!</p>}
  {finished && <p>I finished this tutorial!</p>}
  {goal === 3 ? <p>My goal is to finish in 3 days.</p> : <p>My goal is not to finish in 3 days.</p>}
</BaseLayout>
